<h1>My tasks </h1>


<ul>
  <% @tasks.each do |t| %>

<li><%= check_box_tag(t.title, value = "1", checked = t.completed) %> <%= link_to t.title, task_path(t.id) %> <%= link_to "Delete", task_path(t.id),
    method: :delete, data: { confirm: "Are you sure?"}
   %>
</li>
  <% end %>

</ul>

<%= link_to "Add a new task", new_path %>

